# ============================================
# CONFIGURACIÓN PRODUCCIÓN - RentalBiz
# ⚠️ IMPORTANTE: Cambiar todos los valores antes de desplegar
# ============================================

# Servidor
PORT=3000
NODE_ENV=production

# Base de Datos Producción
DB_HOST=localhost
DB_PORT=3306
DB_NAME=rentalbiz_prod
DB_USER=rentalbiz_admin
DB_PASSWORD=YOUR_STRONG_PRODUCTION_PASSWORD_HERE

# JWT - Producción (OBLIGATORIO cambiar)
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_KEY_MUST_BE_32_CHARS_MIN
JWT_EXPIRES_IN=24h

# Email - Producción (configurar con tu proveedor)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=465
EMAIL_FROM=alerts@yourdomain.com
EMAIL_USER=your_email@yourdomain.com
EMAIL_PASS=your_email_app_password

# Frontend URL (dominio de producción)
FRONTEND_URL=https://rentalbiz.yourdomain.com

# API URL
API_URL=https://api.yourdomain.com/api

# Archivos subidos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logs
LOG_LEVEL=info

# Seguridad
BCRYPT_ROUNDS=12
